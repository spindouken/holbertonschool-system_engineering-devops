#!/usr/bin/env bash
# install HAproxy

# Update package lists
sudo apt-get update

# Install HAProxy
sudo apt-get -y install haproxy

# Enable HAProxy in the default configuration
echo "ENABLED=1" | sudo tee -a /etc/default/haproxy

# Create a new HAProxy configuration
sudo bash -c "cat > /etc/haproxy/haproxy.cfg << EOL
global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http_front
    bind *:80
    mode http
    default_backend http_back

backend http_back
    balance roundrobin
    server STUDENT_ID-web-01 15.237.150.77:80 check
    server STUDENT_ID-web-02 13.38.20.126:80 check
EOL"

# Restart HAProxy to apply the new configuration
sudo service haproxy restart
